<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginEnd="20.2dp"
    android:layout_height="match_parent">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_feed_round_profile_riv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:scaleType="center"
        android:src="@drawable/icon_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_color="@color/primary_dark"
        app:riv_border_width="1dp"
        app:riv_corner_radius="1dp"
        app:riv_mutate_background="true"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/item_feed_round_profile_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.01dp"
        android:text="머지"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/item_feed_round_profile_riv"
        app:layout_constraintStart_toStartOf="@id/item_feed_round_profile_riv"
        app:layout_constraintTop_toBottomOf="@id/item_feed_round_profile_riv" />

</androidx.constraintlayout.widget.ConstraintLayout>