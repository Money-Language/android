<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/item_search_topten_cl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="210dp"
    android:layout_marginHorizontal="6dp"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_search_topten_cardview"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:backgroundTint="@color/primary_light"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_search_topten_main_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_search_topten_number_cl"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg_search_number"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/item_search_topten_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/item_search_topten_number_cl"
                app:layout_constraintEnd_toEndOf="@id/item_search_topten_number_cl"
                app:layout_constraintTop_toTopOf="@id/item_search_topten_number_cl"
                app:layout_constraintBottom_toBottomOf="@id/item_search_topten_number_cl"/>

            <TextView
                android:id="@+id/item_search_topten_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="제목을 넣어요"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="2"
                app:layout_constraintTop_toBottomOf="@id/item_search_topten_number_cl"
                app:layout_constraintStart_toStartOf="@id/item_search_topten_number_cl" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_search_topten_info_cl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/item_search_topten_number_cl">

                <!-- 퀴즈 조회수 -->
                <ImageView
                    android:id="@+id/item_search_topten_info_views_icon_iv"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/icon_views"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/item_search_topten_info_views_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:maxLines="1"
                    android:text="7"
                    android:textColor="@color/light_gray"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/item_search_topten_info_views_icon_iv"
                    app:layout_constraintStart_toEndOf="@id/item_search_topten_info_views_icon_iv"
                    app:layout_constraintTop_toTopOf="@id/item_search_topten_info_views_icon_iv" />

                <!-- 퀴즈 좋아요수 -->
                <ImageView
                    android:id="@+id/item_search_topten_info_fav_icon_iv"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/icon_fav"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/item_search_topten_info_views_content_tv"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/item_search_topten_info_fav_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:maxLines="1"
                    android:text="7"
                    android:textColor="@color/light_gray"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/item_search_topten_info_fav_icon_iv"
                    app:layout_constraintStart_toEndOf="@id/item_search_topten_info_fav_icon_iv"
                    app:layout_constraintTop_toTopOf="@id/item_search_topten_info_fav_icon_iv" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_search_topten_profile_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_search_topten_cardview">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_search_topten_profile_riv"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@color/bg_quiz"
            android:scaleType="center"
            android:src="@drawable/icon_profile"
            app:riv_border_color="@color/primary_dark"
            app:riv_border_width="1dp"
            app:riv_corner_radius="1dp"
            app:riv_mutate_background="true"
            app:riv_oval="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_search_topten_profile_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="두둥탁"
            android:textSize="12dp"
            android:textColor="@color/gray_dark"
            app:layout_constraintStart_toEndOf="@id/item_search_topten_profile_riv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_search_topten_cate_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_search_category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_search_topten_profile_cl"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/item_search_topten_cate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#단어의미"
            android:textSize="12dp"
            android:textColor="@color/gray_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_search_topten_quiz_size_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_search_category"
        app:layout_constraintStart_toEndOf="@id/item_search_topten_cate_cl"
        app:layout_constraintTop_toBottomOf="@id/item_search_topten_profile_cl"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/item_search_topten_quiz_size_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7문제"
           android:textSize="12dp"
            android:textColor="@color/gray_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>